<div class="card card-body p-4 rounded-3 bg-dark text-white">
    <h3 class="text-center">Ingresar un Producto</h3>
    <form action="/products/add" method="POST">
        <div class="mb-3">
            <label for="name">Producto</label>
            <input type="text" name="name" placeholder="Ingresa un producto" 
            id="name" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="mb-3">
            <label for="quantity">Cantidad</label>
            <input type="text" name="quantity" placeholder="Ingresa una cantidad" 
            id="quantity" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="mb-3">
            <label for="price">Precio</label>
            <input type="text" name="price" placeholder="Ingresa un precio" 
            id="price" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="text-center">
            <button class="btn btn-primary"><i class="bi bi-check2-circle"></i> Agregar</button>
        </div>
    </form>
</div>