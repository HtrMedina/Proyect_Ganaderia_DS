<div class="card card-body p-4 rounded-3 bg-dark text-white">
    <h3 class="text-center">Ingresar un Proveedor</h3>
    <form action="/suppliers/add" method="POST">
        <div class="mb-3">
            <label for="supplierName">Proveedor</label>
            <input type="text" name="supplierName" placeholder="Ingresa un proveedor" 
            id="supplierName" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="mb-3">
            <label for="phone">Telefono</label>
            <input type="text" name="phone" placeholder="Ingresa un telefono" 
            id="phone" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="text-center">
            <button class="btn btn-primary"><i class="bi bi-person-check-fill"></i> Agregar</button>
        </div>
    </form>
</div>