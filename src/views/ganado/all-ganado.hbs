<div class="container-fluid p-4">
  <div class="row">
    <div class="col-md-12">
      <!-- Botón de "Regresar" con JavaScript -->
      <button onclick="window.history.back();" class="btn btn-primary mb-3">Regresar</button>

      <div class="card card-body p-3 rounded-3 bg-dark text-white">
        <h3 class="text-center">Lista de Animales</h3>
        <div class="row">
          {{#each ganado}}
          <div class="col-md-3">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                  {{reemo}}
                </h4>
                <p><strong>Numero_Arete: {{earTag}}</strong></p>
                <ul>
                  <li>Sexo: {{sex}}</li>
                  <li>Edad: {{age}} meses</li>
                  <li>Clasificación: {{classification}}</li>
                  <li>Peso: {{weight}} Kgs</li>
                  <li>Precio: $ {{price}}</li>
                  <li>Estado_Salud: {{healthStatus}}</li>
                </ul>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
