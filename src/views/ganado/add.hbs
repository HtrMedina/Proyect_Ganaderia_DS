<div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card card-body p-3 rounded-3 bg-dark text-white">
                <h3 class="text-center">Ingresar Recepción de Ganado</h3>
                <form action="/ganado/add" method="POST">
                    <div class="mb-1">
                        <label for="reemo">Reemo</label>
                        <input type="text" name="reemo" id="reemo" placeholder="Ingresa el reemo" class="form-control rounded-2 bg-white text-dark" required>
                    </div>
                    <div class="mb-1">
                        <label for="motivo">Motivo</label>
                        <select name="motivo" id="motivo" class="form-control rounded-2 bg-white text-dark" required>
                            <option value="Cria">Cría</option>
                            <option value="Engorda">Engorda</option>
                            <option value="Sacrificio">Sacrificio</option>
                        </select>
                    </div>
                    <div class="mb-1">
                        <label for="arrivalDate">Fecha de Recepción</label>
                        <input type="date" name="arrivalDate" id="arrivalDate" class="form-control rounded-2 bg-white text-dark" required>
                    </div>
                    <div class="mb-1">
                        <label for="origin">Origen</label>
                        <select name="origin" id="origin" class="form-control rounded-2 bg-white text-dark" required>
                            <option value="">Selecciona PSG de Origen</option>
                            {{#each ganaderos}}
                                <option value="{{psg}}">{{nombre}} - {{psg}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="mb-1">
                        <label for="destino">Destino</label>
                        <select name="destino" id="destino" class="form-control rounded-2 bg-white text-dark" required>
                            <option value="">Selecciona PSG de Destino</option>
                            {{#each ganaderos}}
                                <option value="{{psg}}">{{nombre}} - {{psg}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary"><i class="bi bi-person-check-fill"></i> Agregar Ganado</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
