<div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-body p-3 rounded-3 bg-dark text-white">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <!-- Botón Agregar Nueva Recepción -->
                    <a href="/ganado/add" class="btn btn-primary">Agregar Nueva Recepción</a>
                    
                    <!-- Menú desplegable para filtrar por 'Destinado a' -->
                    <form action="/ganado/list" method="GET" class="d-inline">
                        <select name="separacion" class="form-select" onchange="this.form.submit()">
                            <option value="">Todos las Recepciones</option>
                            <option value="Venta/Tercero" {{#if (eq selectedSeparacion "Venta/Tercero")}}selected{{/if}}>Venta/Tercero</option>
                            <option value="Propio/Rancho" {{#if (eq selectedSeparacion "Propio/Rancho")}}selected{{/if}}>Propio/Rancho</option>
                        </select>
                    </form>
                </div>

                <h3 class="text-center">Lista de Recepciones de Ganado</h3>
                <table class="table table-bordered table-striped text-white">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Reemo</th>
                            <th>Motivo</th>
                            <th>Fecha de Recepción</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Destinado a</th>
                            <th>Animales</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each recepciones}}
                            <tr>
                                <td>{{@index}}</td>
                                <td>{{reemo}}</td>
                                <td>{{motivo}}</td>
                                <td>{{arrivalDate}}</td>
                                <td>{{origin}}</td>
                                <td>{{destino}}</td>
                                <td>
                                <form action="/ganado/{{_id}}/cambiar-separacion" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm {{#if isSeparacion}}btn-dark{{else}}btn-light{{/if}}">
                                    {{#if isSeparacion}}Venta/Tercero{{else}}Propio/Rancho{{/if}}
                                    </button>
                                </form>
                                </td>

                                <td>{{#if ganado}}{{ganado.length}}{{else}}0{{/if}}</td>
                                <td>
                                    <a href="/ganado/listGanado/{{_id}}" class="btn btn-warning btn-sm">Ver Animales</a>
                                    <a href="/ganado/edit/{{_id}}" class="btn btn-info btn-sm">Editar</a>
                                    <form action="/ganado/delete/{{_id}}" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>