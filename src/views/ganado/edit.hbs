<div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card card-body p-3 rounded-3 bg-dark text-white">
                <h3 class="text-center">Editar Recepción de Ganado</h3>
                <form action="/ganado/edit/{{recepcion._id}}" method="POST">
                    <div class="mb-1">
                        <label for="reemo">Reemo</label>
                        <input type="text" name="reemo" id="reemo" class="form-control rounded-2 bg-white text-dark" value="{{recepcion.reemo}}" required>
                    </div>
                    <div class="mb-1">
                        <label for="motivo">Motivo</label>
                        <select name="motivo" id="motivo" class="form-control rounded-2 bg-white text-dark" required>
                            <option value="Cria" {{#if esCria}}selected{{/if}}>Cría</option>
                            <option value="Engorda" {{#if esEngorda}}selected{{/if}}>Engorda</option>
                            <option value="Sacrificio" {{#if esSacrificio}}selected{{/if}}>Sacrificio</option>
                        </select>
                    </div>
                    <div class="mb-1">
                        <label for="arrivalDate">Fecha de Recepción</label>
                        <input type="date" name="arrivalDate" id="arrivalDate" class="form-control rounded-2 bg-white text-dark" value="{{fechaFormateada}}" required>
                    </div>
                    <div class="mb-1">
                        <label for="origin">Origen</label>
                        <select name="origin" id="origin" class="form-control rounded-2 bg-white text-dark" required>
                            <option value="{{recepcion.origin}}">{{recepcion.origin}}</option>
                            {{#each ganaderos}}
                                <option value="{{psg}}">{{nombre}} - {{psg}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="mb-1">
                        <label for="destino">Destino</label>
                        <select name="destino" id="destino" class="form-control rounded-2 bg-white text-dark" required>
                            <option value="{{recepcion.destino}}">{{recepcion.destino}}</option>
                            {{#each ganaderos}}
                                <option value="{{psg}}">{{nombre}} - {{psg}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-success"><i class="bi bi-pencil-fill"></i> Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
