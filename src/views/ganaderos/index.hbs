<div class="container-fluid p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card card-body p-3 rounded-3 bg-dark text-white">
    <h3 class="text-center">Ingresar un Ganadero</h3>
    <form action="/ganaderos/add" method="POST">
        <div class="mb-1">
            <label for="psg">PSG</label>
            <input type="text" name="psg" placeholder="Ingresa el psg" 
            id="psg" class="form-control rounded-2 bg-white text-dark" required>
        </div>
        <div class="mb-1">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Ingresa el nombre" 
            id="nombre" class="form-control rounded-2 bg-white text-dark" required>
        </div>
        <div class="mb-1">
            <label for="razonSocial">Razon Social</label>
            <input type="text" name="razonSocial" placeholder="Ingresa la razon social" 
            id="razonSocial" class="form-control rounded-2 bg-white text-dark" required>
        </div>
        <div class="mb-1">
            <label for="domicilio">Domicilio</label>
            <input type="text" name="domicilio" placeholder="Ingresa el domicilio" 
            id="domicilio" class="form-control rounded-2 bg-white text-dark" required>
        </div>
        <div class="mb-1">
            <label for="localidad">Localidad</label>
            <input type="text" name="localidad" placeholder="Ingresa el domicilio" 
            id="localidad" class="form-control rounded-2 bg-white text-dark" required>
        </div>
        <div class="mb-1">
            <label for="municipio">Municipio</label>
            <input type="text" name="municipio" placeholder="Ingresa el domicilio" 
            id="municipio" class="form-control rounded-2 bg-white text-dark" required>
        </div>
        <div class="mb-3">
            <label for="estado">Estado</label>
            <input type="text" name="estado" placeholder="Ingresa el domicilio" 
            id="estado" class="form-control rounded-2 bg-white text-dark" required>
        </div>
        <div class="text-center">
            <button class="btn btn-primary"><i class="bi bi-person-check-fill"></i> Agregar</button>
        </div>
    </form>
</div>
        </div>
        <div class="col-md-8">
            {{#if ganaderos}}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>N.</th>
            <th>PSG</th>
            <th>Nombre</th>
            <th>Raz√≥n Social</th>
            <th>Domicilio</th>
            <th>Localidad</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each ganaderos}}
        <tr>
            <td>{{@index}}</td>
            <td>{{psg}}</td>
            <td>{{nombre}}</td>
            <td>{{razonSocial}}</td>
            <td>{{domicilio}}</td>
            <td>{{localidad}}</td>
            <td>{{estado}}</td>
            <td>
                <a href="/ganaderos/edit/{{_id}}" class="btn btn-info"><i class="bi bi-pencil-square"></i></a>
                <a href="/ganaderos/delete/{{_id}}" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h1 class="text-center">No hay Ganaderos</h1>
        <img src="/img/ganadero.png" style="width: 50%; height: auto;" >
    </div>
</div>
{{/if}}


        </div>
    </div>
</div>